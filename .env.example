# LLM Configuration
LLM_TYPE=openai  # Options: openai, deepinfra, huggingface, groq, local
LLM_NAME=gpt-4-turbo  # See MODEL_MAPPINGS in model_provider.py for available models
LLM_TEMPERATURE=0.7
LLM_STREAMING=False

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
DEEPINFRA_API_KEY=your_deepinfra_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
GROQ_API_KEY=your_groq_api_key_here  # Get it from console.groq.com

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# Database Configuration
VECTOR_STORE_PATH=knowledge_base/vector_index
METADATA_DB_PATH=knowledge_base/metadata.sqlite

# External APIs
YOUTUBE_API_KEY=your_youtube_api_key_here
GITHUB_TOKEN=your_github_token_here

# Supabase Configuration (Optional)
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
